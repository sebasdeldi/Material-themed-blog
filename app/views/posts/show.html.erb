<div class="container">
	<div class="wrapper">
		<div class="row">
		     <div class="col s12">
		       <div class="card">
		         <div class="card-image">
		           <img src="<%= @post.image_url%>">
		           <span class="card-title"><%= @post.name%></span>
		         </div>
		         <div class="card-content">
		           <p><%= @post.body%></p>
		         </div>
		         <div class="card-action">
		           <p>Posted by <b><%=@post.user.email%></b> | at <b><%=@post.created_at%></b></p>
		         </div>
		       </div>
		     </div>
		   </div>
	</div>
</div>